<!DOCTYPE html>
<html lang="es">
<!-- HEAD HTML-->
  <%- include('./partials/head') %>
<body>
<!--HEADER-->
  <%- include('./partials/header') %>
<!--/HEADER-->
	<!-- Banner -->
	<div class="banner"></div>
	<!-- /Banner -->

	<!-- ultima visita -->

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Basado en tu Ãºltima visita</h2>
			</div>
			<% visitados.forEach(function(prod){ %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/detail/<%= prod.id %>">
							<figure class="product-box_image">
								<img src="/images/<%=prod.image%>" alt="<%= prod.name %>">
							</figure>
							<article class="product-box_data">
								<% let precioFinal=prod.price-(prod.discount*prod.price/100)
								precioFinal=Math.round(precioFinal) %>
								<h2><%= aMiles(precioFinal) %></h2>
								<% if(prod.discount>0) {%>
								<span><%= prod.discount %>% OFF</span>
								<% } %>
								<p><%=prod.name %></p>
								<i class="fas fa-truck"></i>
							</article>
						</a>
					</section>
				</div>
				<% }) %>
		</div>
	</div>
	<!-- /ultima visita -->

	<!-- Ofertas -->

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ofertas</h2>
			</div>
			<% ofertas.forEach(function(prod){ %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/detail/<%= prod.id %>">
							<figure class="product-box_image">
								<img src="/images/<%=prod.image%>" alt="<%= prod.name %>">
							</figure>
							<article class="product-box_data">
								<% let precioFinal=prod.price-(prod.discount*prod.price/100)
								precioFinal=Math.round(precioFinal) %>
								<h2><%= aMiles(precioFinal) %></h2>
								<% if(prod.discount>0) {%>
								<span><%= prod.discount %>% OFF</span>
								<% } %>
								<p><%=prod.name %></p>
								<i class="fas fa-truck"></i>
							</article>
						</a>
					</section>
				</div>
				<% }) %>
		</div>
	</div>

  <!-- /Ofertas -->
  <!--Footer-->
  <%- include('./partials/footer') %>
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
